<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/base_color"
            android:layout_height="wrap_content">
        <ImageView android:id="@+id/dialog_pic"
                   android:layout_gravity="center"
                   android:layout_marginBottom="2dp"
                   android:layout_marginTop="2dp"
                   android:contentDescription="@string/text_image_eng"
                   android:layout_width="fill_parent"
                   android:layout_height="240dp"/>
        <TextView android:id="@+id/text_title"
                  android:textSize="12pt"
                  android:textColor="@color/white_color"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:layout_margin="3dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text_address"
                  android:textSize="8pt"
                  android:textColor="@color/white_color"
                  android:gravity="center"
                  android:textStyle="italic"
                  android:layout_margin="3dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text_content"
                  android:textSize="10pt"
                  android:textColor="@color/white_color"
                  android:gravity="center"
                  android:layout_margin="3dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
        <Button android:layout_width="match_parent"
                android:text="@string/text_close_eng"
                android:layout_margin="3dp"
                android:id="@+id/button_dismiss"
                android:background="@drawable/button_selector"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>